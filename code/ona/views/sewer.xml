<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="sewer_view_search" model="ir.ui.view">
        <field name="name">sewer.view.search</field>
        <field name="model">ona.sewer</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <field name="name"/>
                <field name="type"/>
                <field name="state_id"/>
                <field name="commune_id"/>

                <group expand="0" string="Group By ...">
                    <filter name="group_by_state" string="State" domain="[]"
                            context="{'group_by':'state_id'}"/>

                    <filter name="group_by_commune" string="Commune" domain="[]"
                            context="{'group_by':'commune_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="sewer_view_tree" model="ir.ui.view">
        <field name="name">sewer.view.tree</field>
        <field name="model">ona.sewer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
                <field name="state_id"/>
                <field name="commune_id"/>
                <field name="longitude"/>
                <field name="latitude"/>
                <field name="buffer_accessibility" optional="hide" string="Buffer Accessibility" />
                <field name="buffer_condition" widget="badge" string="Buffer Condition" 
                    decoration-success="buffer_condition == 'good'"
                    decoration-warning="buffer_condition == 'bad'"
                    decoration-danger="buffer_condition == 'absent'"
                    optional="hide"/>

                <field name="buffer_level" optional="hide" string="Buffer Level (cm)"/>
                <field name="state" widget="badge" 
                    decoration-info="state == 'draft'"
                    decoration-success="state == 'confirm'"
                    decoration-muted="state == 'cancel'"
                />
            </tree>
        </field>
    </record>

    <record id="sewer_view_form" model="ir.ui.view">
        <field name="name">sewer.view.form</field>
        <field name="model">ona.sewer</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" states="draft" class="oe_highlight"/>
                    <button name="action_draft" string="Draft" type="object" states="cancel" />
                    <button name="action_cancel" string="Cancel" type="object" states="draft,close" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" nolabel="1"/>
                        </h1>
                    </div>
                    <field name="type" widget="radio" options="{'horizontal': 1}"/>

                    <group>
                        <field name="active" invisible="1"/>
                        <group>
                            <field name="state_id"/>
                            <field name="commune_id"/>
                            <field name="address"/>
                            <field name="area"/>
                        </group>
                        <group>
                            <field name="date" invisible="1"/>
                            <field name="longitude"/>
                            <field name="latitude"/>
                        </group>
                    </group>

                    <group name="extra_info" string="Extra Information">
                        <group>
                            <field name="ladder"/>
                        </group>
                        <group>
                            <field name="decantation"/>
                            <field name="cunette"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="buffer" string="Buffer">
                            <group>
                                <group>
                                    <field name="buffer_accessibility"/>
                                    <field name="buffer_condition"/>
                                    <label for="buffer_level" string="Level"/>
                                    <div class="o_row">
                                        <field name="buffer_level" nolabel="1"/>
                                        <span>cm</span>
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page name="note" string="Note">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sewer_action" model="ir.actions.act_window">
        <field name="name">Sewer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ona.sewer</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_state': 1, 'search_default_group_by_commune': 1}</field>

    </record>

</odoo>